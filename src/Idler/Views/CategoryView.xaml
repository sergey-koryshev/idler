<UserControl x:Class="Idler.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:Idler.Helpers"
             xmlns:components="clr-namespace:Idler.Components"
             xmlns:models="clr-namespace:Idler.Models"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="TransparentToggleButton" TargetType="{x:Type ToggleButton}">
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Name="border"
                                BorderThickness="0"
                                BorderBrush="Black"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="EyeToggleButton"
               BasedOn="{StaticResource TransparentToggleButton}"
               TargetType="{x:Type ToggleButton}">
            <Setter Property="Content">
                <Setter.Value>
                    <Image Source="{StaticResource EyeIcon}"
                           Width="14"
                           Height="14" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked"
                                   Value="False" />
                        <Condition Property="IsEnabled"
                                   Value="False" />
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="Content">
                            <Setter.Value>
                                <Image Source="{StaticResource EyeIcon_Disabled}"
                                       Width="14"
                                       Height="14" />
                            </Setter.Value>
                        </Setter>
                    </MultiTrigger.Setters>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked"
                                   Value="True" />
                        <Condition Property="IsEnabled"
                                   Value="False" />
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="Content">
                            <Setter.Value>
                                <Image Source="{StaticResource ClosedEyeIcon_Disabled}"
                                       Width="14"
                                       Height="14" />
                            </Setter.Value>
                        </Setter>
                    </MultiTrigger.Setters>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked"
                                   Value="True" />
                        <Condition Property="IsEnabled"
                                   Value="True" />
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="Content">
                            <Setter.Value>
                                <Image Source="{StaticResource ClosedEyeIcon}"
                                       Width="14"
                                       Height="14" />
                            </Setter.Value>
                        </Setter>
                    </MultiTrigger.Setters>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <DockPanel>
        <ToggleButton DockPanel.Dock="Right"
                      Margin="5 0 0 0"
                      IsChecked="{Binding Hidden}"
                      Style="{StaticResource EyeToggleButton}"
                      TabIndex="1" />
        <components:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            helpers:Spellcheck.IsEnabledOnFocus="True"
                            helpers:Spellcheck.ErrorsCount="{Binding SpellingErrorsCount, Mode=OneWayToSource}"
                            VerticalContentAlignment="Center"
                            Padding="3 2"
                            TabIndex="0">
            <components:TextBox.RightControl>
                <StackPanel Orientation="Horizontal">
                    <Image Height="10"
                           Width="10"
                           Style="{StaticResource ListItemSpellingIconImage}"
                           Margin="2 0 4 0">
                    </Image>
                    <Image Height="10"
                           Width="10"
                           Style="{StaticResource ListItemChangeTypeIconImage}"
                           Margin="2 0 4 0">
                    </Image>
                </StackPanel>
            </components:TextBox.RightControl>
        </components:TextBox>
    </DockPanel>
</UserControl>
